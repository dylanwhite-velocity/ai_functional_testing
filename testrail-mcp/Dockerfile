# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
FROM python:3.11-slim AS base

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

RUN apt-get update && apt-get install -y --no-install-recommends build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY pyproject.toml README.md /app/
COPY testrail_mcp /app/testrail_mcp
COPY smithery.yaml LICENSE /app/

# Install only runtime dependencies (editable not needed inside container)
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir .

# Runtime environment variables (override at run time or via --env-file)
ENV TESTRAIL_URL="" \
    TESTRAIL_USERNAME="" \
    TESTRAIL_API_KEY=""

# Expose no ports (stdio communication). For HTTP mode (if added later) you could EXPOSE 8000.

ENTRYPOINT ["python", "-m", "testrail_mcp"]
CMD []
